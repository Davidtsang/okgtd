<h1>Listing tags</h1>
<table>
  <tbody>
    <% @tags.each do |tag| %>

      <tr>
        <td><%= link_to tag.name, tag %>
         <span class="badge pull-right"><%= @tags_groups[tag.id] %></span>
        </td>
        <td><%= link_to 'Edit', edit_tag_path(tag) %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tag', new_tag_path %>
